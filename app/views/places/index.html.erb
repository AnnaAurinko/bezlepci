<div class="row">
  <div class="col-md-10 col-md-offset-1">


    <div class="row">
      <div class="col-md-6" id="search">hledat</div>
      <div class="col-md-6"><%= link_to 'Přidat nové místo', new_place_path %></div>
    </div>

    <div class="row">
      <div class="col-md-3">OBCHODY</div>
      <div class="col-md-3">RESTAURACE</div>
      <div class="col-md-3">KAVÁRNY</div>
      <div class="col-md-3">PIVO</div>
    </div>

    <!-- This is the map -->
    <div id="map-canvas" class="col-md-12"></div>

    <div class="row">
      <div class="col-md-6">nová místa</div>
      <div class="col-md-6">novinky</div>
    </div>
    
     <h1>Listing places</h1>

    <table class="table">
      <thead>
      <tr>
        <th>Name</th>
        <th>Type</th>
        <th>Address</th>
        <th>Description</th>
        <th>Author</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
      </thead>

      <tbody>
      <% @places.each do |place| %>
          <tr>
            <td><%= place.name %></td>
            <td><%= place.specification %></td>
            <td><%= place.address %></td>
            <td><%= place.description %></td>
            <td><%= place.user_id %></td>
            <td><%= link_to 'Show', place %></td>
            <td><%= link_to 'Edit', edit_place_path(place) %></td>
            <td><%= link_to 'Destroy', place, method: :delete, data: {confirm: 'Are you sure?'} %></td>
          </tr>
      <% end %>
      </tbody>
    </table> 

  </div>

</div>