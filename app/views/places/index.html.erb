<div class="row">
  <div class="col-md-12">
  
    <!-- This is the map -->
    <div id="map-canvas">


    </div>
    <input id='search' class='search-ui' placeholder='Napiš název místa' />

    <!--  Linking javascript file map.js -->
    <%= javascript_include_tag "mapbox" %>
  </div>

</div>
</br>
<div class="row">
    <div class="col-md-6" id="novamista">
      <div>
        <h3 align="center">nová místa</h3>
          <ul>
              <% @new_places.each do |place| %>
              <li><%= place.name %>, <%= place.address %></li>
            <% end %>
          </ul>
      </div>
    </div>
    <div class="col-md-6" id="novinky"><h3 align="center">novinky</h3>
      <ul>
        <% @actualities.each do |act| %>
            <li><%= act.title %> - <%= act.body %></li>
        <% end %>
      </ul>
       <ul class="pager">
          <li class="next"><a href="#"><%= link_to "Dřívější", actualities_path %></a></li>
        </ul>


    </div>
</div>
