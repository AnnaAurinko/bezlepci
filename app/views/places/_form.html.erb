      <ul>
      <% @place.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :specification %><br>
    <%= f.text_field :specification %>
  </div>
  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :rating %><br>
    <%= f.number_field :rating %>
  </div>
  <div class="field">
    <%= f.label :comment_id %><br>
    <%= f.select(:comment_id, @comments.map { |comment| [comment.content] }) %>
  </div>
  <div class="field">
    <%= f.label :user_id %><br>
    <%= f.select(:user_id, @users.map { |user| [user.email] }) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
